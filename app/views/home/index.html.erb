<% content_for :head do %>
  <script type="text/javascript">
    $(function() {
	        InitaliseDialogs();

			columns = [
				null,
				null,
				{ "bSortable": false },
				{ "bSortable": false }
				];
	        var oGlossary = $('#GlossaryTable').dataTable({
	            "bJQueryUI": true,
	            "bPaginate": false,
	            "bLengthChange": false,
	            "bFilter": true,
	            "bSort": true,
	            "bInfo": false,
	            "bAutoWidth": false,
	            "aoColumns": columns
	        });

	    });
	</script>
  </script>
<% end %>

<div id="dialog-form" title="Edit glossary item">
	<p>All form fields are required.</p>

	<form action="">
	<fieldset>
		<label for="term">Term</label>
		<input type="text" name="term" id="term" class="text ui-widget-content ui-corner-all" />
		<br />
		<label for="description">Description</label>
		<textarea rows="4" cols="60" name="description" id="description" class="text ui-widget-content ui-corner-all"></textarea>
		<input type="hidden" name="id" id="id" />
	</fieldset>
	</form>
</div>

<div id="dialog-confirm" title="Delete Glossary Item?">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Are you sure you want to delete this item?</p>
    <input type="hidden" name="deleteglossaryitemID" id="deleteglossaryitemID" />
</div>

<h2>Glossary</h2>
    <table id="GlossaryTable">
	  <tr>
		<th class="Term">Term</th>
        <th class="Description">Description</th>
        <th class="EditDelete">Edit</th>
        <th class="EditDelete">Delete</th>
	  </tr>
<% @glossaryitems.each do |item| %>
  <tr id="RowID<%=item.id %>">
    <td id="term<%=item.id %>"><%= item.Term %></td>
    <td id="definition<%=item.id %>"><%= item.Description %></td>
    <td><a href="" onclick="EditGlossaryItem(<%=item.id %>);return false;">Edit Item</a></td>
    <td><a href="" onclick="DeleteGlossaryDialog(<%=item.id %>);return false;">Delete</a></td>
  </tr>
<% end %>
</table>
