<h2>Glossary</h2>
    <table id="GlossaryTable">
	  <tr>
		<th class="Term">Term</th>
        <th class="Description">Description</th>
	  </tr>
<% @glossaryitems.each do |item| %>
  <tr>
    <td><%= item.Term %></td>
    <td><%= item.Description %></td>
  </tr>
<% end %>
</table>
<% form_tag :url => {:action => 'addglossaryitem'}, :remote => true do %>
            <%= submit_tag "Add to Cart" %>
        <% end %>
<br />